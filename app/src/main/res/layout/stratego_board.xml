<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.up.cs301.pig.PigMainActivity">

    <LinearLayout
        android:id="@+id/LeftBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/menuButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Menu" />

        <Button
            android:id="@+id/SurrenderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Surrender"
            android:textSize="10dp" />

        <Button
            android:id="@+id/ExitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/MidContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/TopBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NumTroopYours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Troops: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/Numberyourtroops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/RankSelectedTroop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="|| Rank of troop: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/DisplayRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Miner"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="|| 06:30"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/TurnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="|| Turn: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/TurnNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/numTroopEnemy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="|| Enemy Troops: "
                android:textSize="25dp" />

            <TextView
                android:id="@+id/NumberEnemyTroops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30"
                android:textSize="25dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/BoardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">


            <ImageView
                android:id="@+id/BoardIBackGround"
                android:layout_width="625dp"
                android:layout_height="625dp"
                android:background="@drawable/good_board" />
            --!this ImageView is currently used in Pig files to setTopView!--

            <edu.up.cs301.stratego.BoardView
                android:layout_height="625dp"
                android:layout_width="625dp"
                android:background="@drawable/good_board" />



        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/RightContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/strategoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="Stratego"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/yourGraveyard"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/GraveYoursText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Your Graveyard"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/enemyGraveyard"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/graveEnemyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:text="Enemy Graveyard"
                android:textSize="25dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/controlSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/topLayerControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/endButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="END" />

                <Button
                    android:id="@+id/upButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="0"
                    android:text="UP" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/middleLayerControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/leftButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:text="LEFT" />

                <Button
                    android:id="@+id/rightButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:text="RIGHT" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomLayerControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/helpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="HELP" />

                <Button
                    android:id="@+id/downButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="DOWN" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>